<% layout('layouts/boilerplate') %> 

<h1>Register</h1>

<form action="/register" method="post" class="validated-form" novalidate>

  <!-- Name input -->
    <div class="mb-3">

        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" required></input>

        <div class="invalid-feedback">
            Please add a username
        </div>

    </div>

    <!-- Email input -->
    <div class="mb-3">

        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required></input>

        <div class="invalid-feedback">
            Please add a valid email
        </div>

    </div>
 
    <!-- Password input -->
    <div class="mb-3">

        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required></input>

        <div class="invalid-feedback">
            Please add a password
        </div>

    </div>

    <!--Button -->
    <button class="btn btn-success">Submit</button>

</form>