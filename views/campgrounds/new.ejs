<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">

        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">

            <!-- Title -->
            <div class="mb-3">
                <!-- Make sure to match the upper/lowercase to the campground model! -->
                <label class="form-label" for="title">Campground Title</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Title" required>
                <div class="invalid-feedback">
                    Please add a title
                  </div> 
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label class="form-label" for="location">Campground Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Location" required>
                <div class="invalid-feedback">
                    Please add a location
                  </div> 
            </div>

            <!-- Image Uploader -->
            <div class="mb-3">
                <label for="image" class="form-label">Choose your image</label>
                <input class="form-control" type="file" id="image" name="image">
              </div>
            
            <!-- Image URL
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="https://example.com/users/
                " required>
                <div class="invalid-feedback">
                    Please add an image url
                  </div> 
            </div> -->
            
            <!-- Price -->
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="price" placeholder="0.00" aria-label="price-label" aria-describedby="price-label" required>
                    <div class="invalid-feedback">
                        Please add a price
                      </div> 
                  </div>
            </div>
            
            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                <div class="invalid-feedback">
                    Please add a description
                  </div> 
              </div>

            <!-- Buttons -->
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        
        </form>
        <a href="/campgrounds">All campgrounds</a>
    </div>
</div>



